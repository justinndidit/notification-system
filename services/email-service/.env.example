# Django Configuration
DJANGO_SETTINGS_MODULE=email_service.settings
DEBUG=False
SECRET_KEY=your-super-secret-key-change-in-production

# Database Configuration
# For development (SQLite):
DATABASE_URL=sqlite:///./db.sqlite3

# For production (PostgreSQL):
# DATABASE_URL=postgresql://postgres:password@localhost:5432/email_service

# Email Configuration (SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@example.com

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_PORT=5672

# External Services
TEMPLATE_SERVICE_URL=http://localhost:8001/api/v1/templates/
STATUS_CALLBACK_URL=http://localhost:8002/api/v1/notifications/status/

# Celery Configuration
CELERY_BROKER_URL=amqp://guest:guest@localhost:5672//
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Redis Configuration (for caching and results)
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO

# API Configuration
API_TIMEOUT=30
API_RETRY_ATTEMPTS=3

# Email Service Configuration
MAX_EMAIL_RETRIES=5
SMTP_TIMEOUT=10
TEMPLATE_FETCH_TIMEOUT=5

# Monitoring and Observability
ENABLE_JSON_LOGGING=True
CORRELATION_ID_HEADER=X-Correlation-ID

# Security
ALLOWED_HOSTS=localhost,127.0.0.1,api.example.com
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://api.example.com

# Server Configuration
WORKERS=4
WORKER_CONCURRENCY=4
WORKER_PREFETCH_MULTIPLIER=1
WORKER_MAX_TASKS_PER_CHILD=1000
